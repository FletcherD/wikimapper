{
  "manifest_version": 2,

  "name": "WikiMapper",
  "description": "This extension tracks and graphs your reading of Wikipedia.",
  "version": "0.1",

  "background": { "scripts": ["background.js"] },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ],
  
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "browser_action": {
    "default_title": "WikiMapper",
    "default_icon": "resources/clock.png"
  }
}